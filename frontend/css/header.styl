@keyframes preloader {
    to {
        transform: rotate(360deg)
    }
}

$headerHeight = 106px

$verticalAlign
    display table-cell
    vertical-align middle
$verticalAlignHeight
    @extend $verticalAlign
    height $headerHeight
$angleArrows
    width 0
    height 0
    content ''
    position absolute
$angleArrowLarge
    border-top 65px solid transparent
    border-bottom 65px solid transparent
angleArrowLeftLarge(color)
    @extend $angleArrowLarge
    border-left 45px solid color
$angleArrowSmall
    border-top 53px solid transparent
    border-bottom 53px solid transparent
angleArrowLeftSmall(color)
    @extend $angleArrowSmall
    border-left 37px solid color

.fixed-items
    position fixed
    height $headerHeight
    z-index 2
    background-color $fixed-items-bg
    width 120px
    transition all .3s
    box-shadow 0 0 15px black
    img
        animation preloader 6s infinite linear
        height 100%
        position absolute
        float left
        border-radius 999px
        left 70px
    &.m-hamberger-hover
        background-color white
        .hamburger
            span
                background-color $hamburger-hover-bg

header
    margin-bottom 83px
    padding-left 69px
    height $headerHeight
    color white
    box-shadow 0 0 15px black

.hamburger-wrapper
    width 100%
    height 100%
    position absolute
    cursor pointer
.hamburger
    margin-right 9px
    padding-left 8px
    width 48px
    line-height 17px
    position relative
    top 26px
    float left
    span
        width 100%
        height 11px
        display inline-block
        margin 0 auto
        opacity 1
        border-radius 7px
        position relative
        transition all .3s
        &.top
        &.middle
        &.middle2
        &.bottom
            background-color white
        &.top
            top -5px
            left 2px
        &.middle
            top 0
            left 2px
        &.middle2
            width 48px
            position absolute
            top 21px
            left 10px
        &.bottom
            top 5px
            left 2px
    &.open
        .top
        .bottom
            opacity 0
        .middle
            transform rotate(45deg)
        .middle2
            transform rotate(-45deg)

.static-items
    background-color white
    height $headerHeight
    position relative
    overflow hidden
    padding-left 135px
    border-top-left-radius 50px
    border-bottom-left-radius 50px
    .name
        @extend $verticalAlignHeight
        margin 0
        position relative
        z-index 2
        padding-right 95px
        &:before
            @extend $angleArrows
            angleArrowLeftSmall(white)
            z-index 3
            top 0
            right 7px
        &:after
            @extend $angleArrows
            angleArrowLeftLarge($static-items-h1-after)
            z-index 2
            top -12px
            right -2px
        a
            display block
            line-height $headerHeight
        img
            position relative
            top 14px
            left 3px
    &.m-gifts-hover
        .gifts
            background-color white
            a
                color $gifts-text-hover
                .small
                .large
                    text-shadow none
            &:before
                background-color white
        .languages
            &:after
                background-color white
    &.m-exebitions-hover
        .top-nav
            &:before
                background-color white
        .exhibitions
            background-color white
            &:before
                border-left-color white
            a
                color $exhibitions-text-hover
                text-shadow none

.pencil
    color $pencil
.boom
    color $boom
    position relative
    z-index 1

.top-nav
    @extend $verticalAlign
    background-color $nav-bg
    position relative
    padding-left 6px
    transition all .3s
    &:before
        @extend $angleArrows
        angleArrowLeftLarge(white)
        z-index 1
        top -12px
        left -37px
        background-color $nav-before-bg
        transition all .3s
    &:after
        @extend $angleArrows
        border-top 68px solid transparent
        border-bottom 68px solid transparent
        border-right 48px solid $nav-after-bg
        z-index 3
        top -15px
        right -40px
    ul
        li
            display inline-block

.exhibitions
.gifts
    @extend $verticalAlignHeight
    padding 0 17px 2px 40px
    cursor pointer
.exhibitions
    position relative
    top -2px
    font-size 22.5px
    white-space nowrap
    letter-spacing 6.7px
    transition all .3s
    &:before
        @extend $angleArrows
        angleArrowLeftSmall($exhibitions-before-bg)
        border-left 40px solid $exhibitions-before-bg
        border-top 58px solid transparent
        border-bottom 58px solid transparent
        z-index 3
        top -3px
        right -13px
        transition all .3s
    &:after
        @extend $angleArrows
        angleArrowLeftLarge(white)
        z-index 2
        top -10px
        right -18px
    a
        position relative
        z-index 3
        text-shadow 3px 3px 4px black
        text-decoration none
        color white
        display block
        line-height 106px
        transition all .3s
        &:hover
            text-decoration none
.gifts
    padding 0 50px 0 70px
    position relative
    background-color $gifts-bg
    text-transform uppercase
    font-size 40px
    transition all .3s
    &:before
        @extend $angleArrows
        angleArrowLeftLarge($gifts-before)
        top -12px
        left -19px
        background-color $gifts-before-bg
        transition all .3s
    a
        color white
        text-decoration none
        transition all .3s
        &:hover
            text-decoration none
    .small
    .large
        text-shadow 4px 3px 5px black
    .small
        position relative
        left -13px
        font-size 23px
        line-height 63px
    .large
        position relative
        top 5px

.languages
    @extend $verticalAlignHeight
    position relative
    padding 0 0 0 23px
    background-color $languages-bg
    font-size 20px
    width 100%
    &:before
        @extend $angleArrows
        @extend $angleArrowLarge
        border-right 45px solid white
        border-top 65px solid transparent
        border-bottom 65px solid transparent
        top -12px
        left -12px
        z-index 2
    &:after
        @extend $angleArrows
        @extend $angleArrowLarge
        border-right 47px solid $languages-after-bg
        top -12px
        left -22px
        background-color $languages-before-bg
        transition all .3s
    li
        transition all .3s
        cursor pointer
        display inline-block
        font-weight bold
        text-shadow 4px 3px 5px black
        &:first-child
            margin-left 0
            position relative
            z-index 3
        margin-left 7px
        &.active
            color $languages-active

nav
    width 245px
    position absolute
    top $headerHeight
    left -245px
    transition all .3s
    background-color $nav-bg-color
    &:before
        content ''
        display block
        height 106px
        background-color white
        width 125px
        position absolute
        z-index -1
        right 0
        top -106px
        transition all .3s
    &.open
        left 0
    &.isScrollBelowTitle
        &:before
            background-color $nav-bg-when-open
    ul
        padding 24px 0
        border-top 1px solid $nav-separator-border
        box-sizing border-box
        &:first-child
            border-top 0 none
        li
            padding-left 38px
            line-height 33px
            transition all .3s
            &:hover
                background-color $nav-hover-text-bg
                a
                    color $nav-hover-text-color
            &:first-child
                margin-top 0
            a
                color $nav-link-text
                text-decoration none
                transition all .3s
                &:hover
                    text-decoration none
