@keyframes preloader {
    to {
        transform: rotate(360deg)
    }
}

$headerHeight = 106px

.fixed-items
    position fixed
    height $headerHeight
    img
        animation preloader 6s infinite linear
        height 100%
        position relative
        left 12px
        float left
        background-color white
        border-radius 999px

header
    padding-left 112px
    height $headerHeight
    background-color $header-bg

.hamburger
    width 48px
    line-height 17px
    position relative
    top 26px
    left 8px
    float left
    span
        width 100%
        height 7px
        display inline-block
        margin 0 auto
        opacity 1
        border-radius 7px
        position relative
        top 0
        border 1px solid $hamburger-border
        &.top
        &.middle
        &.bottom
            background-color white

.static-items
    background-color white
    padding-left 230px
    height 106px
