filter-bg(color)
    padding 2px 0 8px 23px
    display inline-block
    width 209px
    border 1px solid $filter-border
    border-right none
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    font-size 21px
    color white
    text-shadow 4px 4px 6px black
    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ff75f5+82,ffffff+82,ffffff+84,ff75f5+84,ff75f5+85,ff75f5+88,ffffff+88 */
    /* Old browsers */
    background #ff75f5
    /* FF3.6-15 */
    background -moz-linear-gradient(-45deg, color 84%, #ffffff 84%, #ffffff 85.5%, color 85.5%, color 85.5%, color 89.5%, #ffffff 89.5%)
    /* Chrome10-25,Safari5.1-6 */
    background -webkit-linear-gradient(-45deg,  color 84%, #ffffff 84%, #ffffff 85.5%, color 85.5%, color 85.5%, color 89.5%, #ffffff 89.5%)
    /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    background linear-gradient(125deg, color 84%, #ffffff 84%, #ffffff 85.5%, color 85.5%, color 85.5%, color 89.5%, #ffffff 89.5%)
    /* IE6-9 fallback on horizontal gradient */
    filter unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr="#ff75f5", endColorstr="#ffffff",GradientType=1 )')
$filter
    width 0
    height 0
    position relative
    top calc(50% - 3px)
    transition all .3s
select-triangle-closed(color)
    @extend $filter
    border-left 7px solid transparent
    border-right 6px solid transparent
    border-top 11px solid color
select-triangle-open(color)
    transform rotate(180deg)
