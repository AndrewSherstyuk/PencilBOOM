.chosen-container
    width 173px !important
    border 1px solid $filter-border
    border-left 0 none
    border-top-right-radius 3px
    border-bottom-right-radius 3px
    padding 9px 7px 6px 0
    top -1px
    background-color white
    &.chosen-container-active
        border-bottom-right-radius 0
        .chosen-drop
            width 203px
            left -21px
            border 1px solid black
            border-top 0 none
.chosen-container .chosen-drop
    border 0 none
.chosen-container .chosen-drop .chosen-results
    margin 0
    padding 0
    max-height none
.chosen-container .chosen-drop .chosen-results li
    border-top 1px solid $filter-genre-item-border
    height 41px
    line-height 30px
.chosen-container-single .chosen-single
    padding 0
    border 0 none
    background transparent
    box-shadow none
    top -3px
.chosen-container-single .chosen-single span
    font-size 20px
.chosen-container-active.chosen-with-drop .chosen-single
    border 0 none
    background transparent
    box-shadow none
.chosen-container-single .chosen-drop
    margin-top 0

$animationStep = 1.5%
$active = 1%
$back = 6%
$active2 = 51%
$back2 = 56%
$animationStateDefault = translate(0, 0)
$animationStateActive = translate(0, -15px)
for i in 1..10
    @keyframes jumpingHeader{i}
        0%
            transform $animationStateDefault
        {$active}
            transform $animationStateActive
        {$back}
            transform $animationStateDefault
        50%
            transform $animationStateDefault
        {$active2}
            transform $animationStateActive
        {$back2}
            transform $animationStateDefault
        100%
            $animationStateDefault
    $active = $active + $animationStep
    $back = $back + $animationStep
    $active2 = $active2 + $animationStep
    $back2 = $back2 + $animationStep
    .header{i}
        display inline-block
        animation-timing-function ease-in-out
        animation-duration 4s
        animation-iteration-count infinite
        animation-name jumpingHeader + i
